          </header>
        <div class="center w-full min-h-[100vh] bg-gray-200 flex items-center flex-col">
            <%shopOwner.bills.forEach((bill)=>{ %>
                <a class="w-[40%] h-16 bg-white rounded-xl flex items-center justify-between px-3 my-1" href="/invoice/<%=bill._id%>">
                    <div class="">
                        <h5 class="text-2xl"><%=bill.customerName%></h5>
                        <h5>Rs. <%=bill.totalAmount%></h5>
                    </div>
                </a>
            <%})%>
        </div>
    </div>
